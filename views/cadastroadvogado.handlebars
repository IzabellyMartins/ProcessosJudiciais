<div class="spacer"></div> 
<div class="card">
    <div class="card-body">
        <h1>Crie sua conta:</h1>
        <br>
        <form action="/advogados/registroadvogado" method="post">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" required>
            </div>
            <br>
            <div class="form-group">
                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" required>
            </div>
            <br>
            <div class="form-group" id="oab-field" required> 
                <label for="oab">OAB:</label>
                <input type="text" id="oab" name="oab">
            </div>
            <br>
            <div class="form-group">
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <br>
            <div class="form-group">
                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" required>
            </div>
            <br>
            <div class="form-group">
                <label for="senha2">Repita sua senha:</label>
                <input type="password" id="senha2" name="senha2" required>
            </div>
            <br>
            <button type="submit" class="botao-azul">Criar conta</button>
        </form>
    </div>
</div>


