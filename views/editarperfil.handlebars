<h1>Editar Perfil:</h1>

{{#if erros}}
    <ul>
        {{#each erros}}
            <li>{{this.texto}}</li>
        {{/each}}
    </ul>
{{/if}}
<div class="spacer">
  
    <form action="/clientes/perfil" method="POST">
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" value="{{cliente.nome}}" required>
        </div>
        <br>
        <div>
            <label for="email">E-mail:</label>
            <input type="email" id="email" name="email" value="{{cliente.email}}" required>
        </div>
        <br>
        <div>
            <label for="senha">Nova Senha (deixe em branco para manter a senha atual):</label>
            <input type="password" id="senha" name="senha">
        </div>
        <br>
        <div>
            <label for="senha2">Confirme a Nova Senha:</label>
            <input type="password" id="senha2" name="senha2">
        </div>
        <br>
        <button type="submit" class="botao-verde">Salvar Alterações</button>
    </form>
</div>
<a href="/clientes/clientedashboard"><button class="botao-azul">Voltar ao Dashboard</button></a>
